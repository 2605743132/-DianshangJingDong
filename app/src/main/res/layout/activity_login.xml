<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ad"
    android:gravity="center_horizontal"
    android:orientation="vertical"

    tools:context=".loginmvp.LoginActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:textColor="#FFFFFF"
        android:drawableLeft="@drawable/login_icon_phone_n_hdpi"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:textColorHint="#FFFFFF"
        android:hint="手机号" />

    <EditText
        android:drawableLeft="@drawable/login_icon_lock_n_hdpi"
        android:drawableRight="@drawable/login_icon_eye_n_hdhpi"
        android:gravity="center"
        android:textColorHint="#FFFFFF"
        android:id="@+id/edit_pwd"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:hint="登录密码"
        android:password="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:gravity="center|left">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住密码"
                android:textColor="#FFFCFCF9" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tee"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:gravity="right|center"

                android:text="快速注册"

                android:textColor="#FFFCFCF9" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center"
        android:orientation="vertical">

        <Button

            android:id="@+id/btn_deng"
            android:layout_width="300dp"
            android:layout_height="45dp"

         android:textColor="#FFFE775D"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:background="#FFFFFFFF"
            android:text="登录"
            android:textSize="32sp" />
    </LinearLayout>
</LinearLayout>